@model Areademo.Models.StudentModel



<main id="main" class="main">
    <div class="container mt-5">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Student Form</h2>
            <form>
                <div class="mb-3">
                    <label for="studentName" class="form-label">Full Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="studentName" name="studentName" required>
                    <span asp-validation-for="Name" class="text-danger "></span>
                </div>

                <div class="mb-3">
                    <label for="studentId" class="form-label">Student ID</label>
                    <input type="text" asp-for="Id" class="form-control" id="studentId" name="studentId" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</main>