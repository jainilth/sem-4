<main id="main" class="main">
    <div class="container-fluid">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Search City</h5>
                <form>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <input type="text" class="form-control" placeholder="Enter City Name">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" aria-label="Select State">
                                <option selected>Select State</option>
                                <option value="1">California</option>
                                <option value="2">Ontario</option>
                                <!-- Add more options as needed -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" aria-label="Select Country">
                                <option selected>Select Country</option>
                                <option value="1">United States</option>
                                <option value="2">Canada</option>
                                <!-- Add more options as needed -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" placeholder="Enter Pin Code">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary me-2">Search</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a asp-controller="City" asp-action="AddCity" class="btn btn-success">+ Add City</a>
                    <h5 class="card-title mb-0">City List</h5>
                    <input type="text" style="width:180px" class="form-control" id="quickSearch" placeholder="Quick search...">
                </div>

                <div class="table-responsive">
