<main id="main" class="main">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-3">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="City" asp-action="TableCity">City</a></li>
                        <li class="breadcrumb-item active">Add/Edit City</li>
                    </ol>
                </nav>

                <h5 class="card-title mb-4">City Add/Edit</h5>

                <form>

                    <div class="mb-3">
                        <label for="stateID" class="form-label">State ID</label>
                        <select class="form-select" id="stateID" required>
                            <option value="">Select State</option>
                            <option value="1">State 1</option>
                            <option value="2">State 2</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="countryID" class="form-label">Country ID</label>
                        <select class="form-select" id="countryID" required>
                            <option value="">Select Country</option>
                            <option value="1">Country 1</option>
                            <option value="2">Country 2</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="cityName" class="form-label">City Name</label>
                        <input type="text" class="form-control" id="cityName" required>
                    </div>

                    <div class="mb-3">
                        <label for="stdCode" class="form-label">STD Code</label>
                        <input type="text" class="form-control" id="stdCode">
                    </div>

                    <div class="mb-3">
                        <label for="pinCode" class="form-label">Pin Code</label>
                        <input type="text" class="form-control" id="pinCode" maxlength="6">
                    </div>

                    <div class="mb-3">
                        <label for="userID" class="form-label">User ID</label>
                        <input type="number" class="form-control" id="userID" required>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="reset" class="btn btn-secondary me-2">Reset</button>
                        <a asp-controller="City" asp-action="TableCity" class="btn btn-primary">Back</a>
                    </div>
                    <div class="mt-3">@Html.ActionLink("Register yourself", "TableCity", "City")</div>
                    <div class="mt-3">@Html.ActionLink("simple link to a 'home' controller 'index' action", "Index", "Home")</div>
                    <div class="mt-3">
                        <a href="@Url.Action("TableCity","City")">Register yourself</a>
                    </div>
                    @Url.Action("TableCity", "City")
                    @Html.ActionLink("Register yourself", "Index", "Home", null, new { @class = "btn btn-warning" })
                </form>
            </div>
        </div>
    </div>
</main>