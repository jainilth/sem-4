<main id="main" class="main">
	<div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-3">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="State" asp-action="TableState">State</a></li>
                        <li class="breadcrumb-item active">Add/Edit State</li>
                    </ol>
                </nav>

                <h5 class="card-title mb-4">State Add/Edit</h5>

                <form>

                    <div class="mb-3">
                        <label for="countryID" class="form-label">Country ID</label>
                        <select class="form-select" id="countryID" required>
                            <option value="">Select Country</option>
                            <option value="1">Country 1</option>
                            <option value="2">Country 2</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="stateName" class="form-label">State Name</label>
                        <input type="text" class="form-control" id="stateName" required>
                    </div>

                    <div class="mb-3">
                        <label for="stateCode" class="form-label">State Code</label>
                        <input type="text" class="form-control" id="stateCode" required>
                    </div>

                    <div class="mb-3">
                        <label for="userID" class="form-label">User ID</label>
                        <input type="number" class="form-control" id="userID" required>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="reset" class="btn btn-secondary me-2">Reset</button>
                        <a asp-controller="State" asp-action="TableState" class="btn btn-primary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>