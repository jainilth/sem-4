                                <td>
                                    <a href="#" class="btn btn-sm btn-primary me-1">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>2</td>
                                <td>Ontario</td>
